<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    
                 
                            
                                                                      
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:tag="layout/activity_main_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:id="@+id/mainColorPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainCustomView">

            <com.example.colorpickerdemo.ColorPickerView
                android:id="@+id/colorPickerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_color_picker" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainCustomView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg"
            android:layout_marginTop="@dimen/margin_layput"
            android:baselineAligned="false"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/customView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:elevation="@dimen/elevation"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/sivFirstView"
                    android:layout_width="@dimen/circle_image_size"
                    android:layout_height="@dimen/circle_image_size"
                    android:layout_margin="@dimen/margin_common"
                    style="@style/circleShape"
                    android:background="@android:color/holo_red_dark" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/customView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/sivSecondView"
                    android:layout_width="@dimen/circle_image_size"
                    android:layout_height="@dimen/circle_image_size"
                    android:layout_margin="@dimen/margin_common"
                    android:background="@android:color/holo_red_dark" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/customView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/sivThirdView"
                    android:layout_width="@dimen/circle_image_size"
                    android:layout_height="@dimen/circle_image_size"
                    android:layout_margin="@dimen/margin_common"
                    android:background="@android:color/holo_red_dark" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txtBrightness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_layput"
            android:text="@string/brigtness"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainColorPicker" />

        <SeekBar
            android:id="@+id/brightnessSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/margin_common"
            android:layout_marginEnd="@dimen/margin_common"
            android:progress="100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPercentage" />

        <TextView
            android:id="@+id/txtPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/margin_common"
            android:layout_marginStart="@dimen/margin_common"
            android:text="100%"
            android:textSize="@dimen/text_size"
            app:layout_constraintStart_toStartOf="@+id/brightnessSeekBar"
            app:layout_constraintEnd_toEndOf="@+id/brightnessSeekBar"
            app:layout_constraintTop_toBottomOf="@+id/txtBrightness" />

    </androidx.constraintlayout.widget.ConstraintLayout>
         