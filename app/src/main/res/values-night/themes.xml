<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ColorPickerDemo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:windowBackground">@color/black</item>
        <item name="shapeAppearanceOverlay">@style/circularShape</item>
    </style>

    <style name="circularShape">
        <item name="cornerSize">50%</item>
        <item name="strokeColor">@android:color/white</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="circleShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- This makes it a circle -->
    </style>

</resources>